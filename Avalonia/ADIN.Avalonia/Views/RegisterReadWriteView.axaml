<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="300"
             x:Class="ADIN.Avalonia.Views.RegisterReadWriteView">
	<Grid RowDefinitions="*,5,*">
		<HmcCard Density="High" Header="Register Read" Grid.Row="0">
			<Grid ColumnDefinitions="Auto,20,Auto,20,*">
				<HmcInputField Grid.Column="0" Label="Address" Size="ExtraSmall" Width="100"/>
				<HmcInputField Grid.Column="2" Label="Address" Size="ExtraSmall" Width="100"/>
				<HmcButton Grid.Column="4" Size="xs" VerticalAlignment="Bottom" Content="Read"/>
			</Grid>
		</HmcCard>
		<HmcCard Density="High" Header="Register Write" Grid.Row="2">
			<Grid ColumnDefinitions="Auto,20,Auto,20,*">
				<HmcInputField Grid.Column="0" Label="Address" Size="ExtraSmall" Width="100"/>
				<HmcInputField Grid.Column="2" Label="Address" Size="ExtraSmall" Width="100"/>
				<HmcButton Grid.Column="4" Size="xs" VerticalAlignment="Bottom" Content="Write"/>
			</Grid>
		</HmcCard>
	</Grid>
</UserControl>
