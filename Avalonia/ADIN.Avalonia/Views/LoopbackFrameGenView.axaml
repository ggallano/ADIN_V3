<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="900"
             x:Class="ADIN.Avalonia.Views.LoopbackFrameGenView">
	<ScrollViewer>
		<StackPanel Margin="8">
			<Grid ColumnDefinitions="*,Auto">
				<HmcCard Margin="8" Grid.Column="0" Density="High" Header="Loopback">
					<Grid ColumnDefinitions="6*,24,4*" RowDefinitions="Auto,Auto">
						<HmcComboBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Size="sm" PlaceholderText="" ItemsSource="{}" SelectedItem="{}" Label="Select Loopback" IsRequired="True"/>
						<ToggleSwitch Grid.Column="2" Grid.Row="0" OnContent="Rx Suppression" OffContent="Rx Suppression" IsChecked="True"/>
						<ToggleSwitch Grid.Column="2" Grid.Row="1" OnContent="Tx Suppression" OffContent="Tx Suppression" IsChecked="True"/>
					</Grid>
				</HmcCard>
				<HmcCard Grid.Column="1" Margin="8" Density="High" Header="Active Phy Mode" IsVisible="False">
					<TextBlock Text="Copper Media Only" Classes="title s"/>
				</HmcCard>
			</Grid>
			<HmcCard Margin="8" Height="300">

			</HmcCard>
			<HmcCard Margin="8" Density="High" Header="Frame Generator">
				<Grid ColumnDefinitions="6*,24,7*">
					<StackPanel Grid.Column="0">
						<ToggleSwitch Content="Continuous Mode until Terminated" OnContent="Enabled" OffContent="Disabled" IsChecked="True"/>
						<HmcComboBox Margin="0 10 0 0" PlaceholderText="" ItemsSource="{}" SelectedItem="{}" Label="Frame Content" IsRequired="True"/>
					</StackPanel>
					<StackPanel Grid.Column="2">
						<Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*,Auto,*">
							<TextBlock Grid.Row="0" Grid.Column="0" Text="Number of Frames in Burst" VerticalAlignment="Center"/>
							<HmcInputField Grid.Row="0" Grid.Column="1" Size="ExtraSmall" Width="70" FieldType="Number" Value="{}"/>
							<Slider Grid.Row="1" Grid.ColumnSpan="2" x:Name="SliderFrameNumber" Value="{}" Minimum="100" Maximum="65536" SmallChange="100" TickFrequency="100" IsSnapToTickEnabled="True" IsEnabled="{}"/>
							<TextBlock Grid.Row="2" Grid.Column="0" Text="Frame Length" VerticalAlignment="Center"/>
							<HmcInputField Grid.Row="2" Grid.Column="1" Size="ExtraSmall" Width="70" FieldType="Number" Value="{}"/>
							<Slider Grid.Row="3" Grid.ColumnSpan="2" x:Name="SliderFrameLength" Value="{}" Minimum="100" Maximum="65536" SmallChange="100" TickFrequency="100" IsSnapToTickEnabled="True" IsEnabled="{}"/>
						</Grid>
					</StackPanel>
				</Grid>
			</HmcCard>
		</StackPanel>
	</ScrollViewer>
</UserControl>
