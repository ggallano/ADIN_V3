    <Grid Margin="5">
        <telerik:RadPropertyGrid telerik:StyleManager.Theme="Windows8" 
                                 Item="{Binding}" 
                                 NestedPropertiesVisibility="Visible" 
                                 AutoGeneratePropertyDefinitions='False' 
                                 IsGrouped='True'
                                 RenderMode="Flat"
                                 SearchBoxVisibility="Collapsed"
                                 SortAndGroupButtonsVisibility="Collapsed">
            <telerik:RadPropertyGrid.PropertyDefinitions>
                <telerik:PropertyDefinition DisplayName="Master or Slave Preference"
                                            Description="Prefer to be master or slave during negotiation"
                                            GroupName="Auto-negotiation Master/Slave Advertisement"
                                            OrderIndex="0">
                    <telerik:PropertyDefinition.EditorTemplate>
                        <DataTemplate>
                            <telerik:RadComboBox ItemsSource="{Binding AutoNegMasterSlaveAdvertisements}" 
                                                 SelectedItem="{Binding SelectedAutoNegMasterSlaveAdvertisement}" 
                                                 Style="{StaticResource TelerikComboBoxStyle}" 
                                                 DisplayMemberPath="Name"/>
                        </DataTemplate>
                    </telerik:PropertyDefinition.EditorTemplate>
                </telerik:PropertyDefinition>
                <telerik:PropertyDefinition DisplayName="Tx Level"
                                            Description="Specify the peak to peak voltage of the signal"
                                            GroupName="Auto-negotiation Tx Level Advertisement"
                                            OrderIndex="1">
                    <telerik:PropertyDefinition.EditorTemplate>
                        <DataTemplate>
                            <telerik:RadComboBox ItemsSource="{Binding AutoNegTxLevelAdvertisements}" 
                                                 SelectedItem="{Binding SelectedAutoNegTxLevelAdvertisement}" 
                                                 Style="{StaticResource TelerikComboBoxStyle}" 
                                                 DisplayMemberPath="Name"/>
                        </DataTemplate>
                    </telerik:PropertyDefinition.EditorTemplate>
                </telerik:PropertyDefinition>
            </telerik:RadPropertyGrid.PropertyDefinitions>
        </telerik:RadPropertyGrid>
    </Grid>
</UserControl>
