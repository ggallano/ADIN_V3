                <TabControl Style="{StaticResource TabStyle}">
                    <TabItem Header="Link Properties" IsSelected="True" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="400"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <local:LinkPropertiesView Grid.Column="0" DataContext="{Binding LinkPropertiesVM}"/>
                            <GridSplitter Grid.Column="1" Style="{DynamicResource VerticalGridSplitterStyle}" />
                            <Grid Grid.Column="2">
                                <components:DeviceStatusView DataContext="{Binding DeviceStatusVM}"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Loopback" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" MinWidth="600"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <local:LoopbackView Grid.Column="0" DataContext="{Binding LoopbackVM}"/>
                            <GridSplitter Grid.Column="1" Style="{DynamicResource VerticalGridSplitterStyle}" />
                            <Grid Grid.Column="2">
                                <components:DeviceStatusView DataContext="{Binding DeviceStatusVM}"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="FrameGenerator/Checker" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="500"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <local:FrameGenCheckerView DataContext="{Binding FrameGenCheckerVM}"/>
                            <GridSplitter Grid.Column="1" Style="{DynamicResource VerticalGridSplitterStyle}" />
                            <components:FrameGenCheckerStatusView Grid.Column="2" DataContext="{Binding DeviceStatusVM}"/>
                        </Grid>

                    </TabItem>
                    <TabItem Header="Register Access" Style="{StaticResource TabItemStyle}">
                        <local:RegisterListingView DataContext="{Binding RegisterListingVM}"/>
                    </TabItem>
                    <TabItem Header="Clock Pin Control" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="400"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <local:ClockPinControlView Grid.Column="0" DataContext="{Binding ClockPinControlVM}"/>
                            <!--<GridSplitter Grid.Column="1" Style="{DynamicResource VerticalGridSplitterStyle}" />-->
                        </Grid>
                    </TabItem>
                    <TabItem Header="Test Modes" Style="{StaticResource TabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="400"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <local:TestModeView Grid.Column="0" DataContext="{Binding TestModeVM}"/>
                            <GridSplitter Grid.Column="1" Style="{DynamicResource VerticalGridSplitterStyle}" />
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
